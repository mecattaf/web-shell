{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "composite": true,
    "declarationDir": "./dist/types",
    "skipLibCheck": true
  },
  "include": [
    "src/sdk/**/*.ts",
    "src/bridge/**/*.ts"
  ],
  "exclude": [
    "src/sdk/**/*.test.ts",
    "src/sdk/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts"
  ]
}
